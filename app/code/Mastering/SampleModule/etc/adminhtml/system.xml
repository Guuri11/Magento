<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="mastering" sortOrder="10000" translate="label">
            <label>Mastering</label>
        </tab>
        <section id="mastering" translate="label" sortOrder="10" showInStore="0" showInDefault="1" showInWebsite="0">
            <label>Mastering</label>
            <tab>mastering</tab>
            <resource>Mastering_SampleModule::mastering</resource>
            <group id="general" translate="label" type="select" sortOrder="10" showInWebsite="0" showInDefault="1" showInStore="0">
                <label>Item creation by schedule</label>
                <field id="enabled" translate="label" type="select" sortOrder="10" showInStore="0" showInDefault="1" showInWebsite="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="cron_expression" translate="label" type="text" sortOrder="20" showInWebsite="0" showInDefault="1" showInStore="0">
                    <label>Add Item Cron Expression</label>
                </field>
            </group>
        </section>
    </system>
</config>
